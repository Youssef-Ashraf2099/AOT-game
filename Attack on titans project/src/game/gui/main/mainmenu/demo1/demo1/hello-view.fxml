<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="game.gui.main.mainmenu.demo1.HelloController">
    <top>
        <Text fx:id="title" text="Attack on Titan: Save Utopia" textAlignment="CENTER" wrappingWidth="496.8759765625">
         <font>
            <Font name="Berlin Sans FB" size="31.0" />
         </font></Text>
    </top>
    <center>
        <VBox fx:id="menuOptions" alignment="CENTER" prefHeight="444.0" prefWidth="610.0" spacing="20">
            <Button fx:id="startButton" blendMode="MULTIPLY" cache="true" contentDisplay="CENTER" onAction="#startGame" prefHeight="20.0" prefWidth="104.0" text="Start Game">
            <font>
               <Font name="Bradley Hand ITC" size="16.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
            <Button fx:id="instructionsButton" onAction="#displayRules" text="Instructions">
            <font>
               <Font name="Bradley Hand ITC" size="15.0" />
            </font></Button>
            <Button fx:id="optionsButton" onAction="#displayOptions" text="Options">
            <font>
               <Font name="Bradley Hand ITC" size="15.0" />
            </font></Button>
            <Button fx:id="exitButton" onAction="#exitGame" text="Exit">
            <font>
               <Font name="Bradley Hand ITC" size="15.0" />
            </font></Button>
            <Button fx:id="creditButton" onAction="#displayCredits" text="Credits">
            <font>
               <Font name="Bradley Hand ITC" size="15.0" />
            </font></Button>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </VBox>
    </center>
</BorderPane>
